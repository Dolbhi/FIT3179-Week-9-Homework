{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "ALL BURNS",
    "data": {
        "url": "data/burn_centres.csv"
    },
    "transform": [
        {
            "calculate": "split(datum.state, ' ')[0]",
            "as": "state_code"
        },
        {
            "calculate": "slice(split(datum.state, '(')[1], 0, -1)",
            "as": "state_name"
        },
        {
            "calculate": "timeParse(split(datum.ignition_date, ' ')[0], '%Y/%m/%d')",
            "as": "ignition_date_parsed"
        },
        {
            "calculate": "datetime(year(datum.ignition_date), month(datum.ignition_date))",
            "as": "ignition_month"
        },
        {
            "filter": "datum.fire_type != 'Prescribed Burn'"
        }
    ],
    "vconcat": [
        {
            "title": "Centrepoints of Historical Bushfires",
            "width": 500,
            "height": 450,
            "projection": {
                "type": "equirectangular",
                "center": [
                    -27,
                    137
                ]
            },
            "layer": [
                {
                    "data": {
                        "url": "geometry/ne_10m_graticules_5.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_10m_graticules_5"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "white",
                        "stroke": "lightgray"
                    }
                },
                {
                    "data": {
                        "url": "geometry/states_simple.json",
                        "format": {
                            "type": "topojson",
                            "feature": "STE_2021_AUST_GDA2020"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "white",
                        "stroke": "lightgray"
                    }
                },
                {
                    "mark": "circle",
                    "encoding": {
                        "latitude": {
                            "field": "Y",
                            "type": "quantitative"
                        },
                        "longitude": {
                            "field": "X",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "area_ha",
                            "type": "quantitative"
                        },
                        "color": {
                            "field": "state_name",
                            "type": "nominal"
                        }
                    }
                }
            ]
        },
        {
            "title": {
                "text": "Bushfires Over Time"
            },
            "width": 500,
            "height": 450,
            "layer": [
                {
                    "mark": "circle",
                    "params": [
                        {
                            "name": "my_brush",
                            "select": {
                                "type": "interval",
                                "encodings": [
                                    "x"
                                ]
                            }
                        }
                    ],
                    "encoding": {
                        "x": {
                            "field": "ignition_date_parsed",
                            "type": "temporal",
                            "title": "Ignition Date"
                        },
                        "y": {
                            "field": "area_ha",
                            "type": "quantitative",
                            "title": "Burnt Area (Hectres)"
                        },
                        "size": {
                            "field": "area_ha",
                            "type": "quantitative",
                            "title": "Burnt Area (Hectres)"
                        },
                        "color": {
                            "field": "state_name",
                            "type": "nominal",
                            "title": "State"
                        },
                        "tooltip": [
                            {
                                "field": "state_name",
                                "type": "nominal",
                                "title": "State"
                            },
                            {
                                "field": "area_ha",
                                "type": "quantitative",
                                "format": ",.0f",
                                "title": "Burn Area (Hectre)"
                            },
                            {
                                "field": "ignition_date_parsed",
                                "type": "temporal",
                                "title": "Ignition Date"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}