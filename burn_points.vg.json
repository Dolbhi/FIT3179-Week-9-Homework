{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "ALL BURNS",
    "data": {
        "url": "data/all_burns.csv"
    },
    "transform": [
        {
            "calculate": "split(datum.state, ' ')[0]",
            "as": "state_code"
        },
        {
            "calculate": "slice(split(datum.state, '(')[1], 0, -1)",
            "as": "state_name"
        },
        {
            "calculate": "timeParse(split(datum.ignition_d, ' ')[0], '%Y-%m-%dT')",
            "as": "ignition_date"
        },
        {
            "filter": "datum.fire_type != 'Prescribed Burn'"
        },
        {
            "calculate": "datum.shape_area * 973205.204434",
            "as": "true_shape_area"
        }
    ],
    "vconcat": [
        {
            "title": {
                "text": "Bushfires by State"
            },
            "width": 500,
            "height": 450,
            "projection": {
                "type": "equirectangular",
                "center": [
                    -27,
                    137
                ]
            },
            "layer": [
                {
                    "data": {
                        "url": "geometry/ne_10m_graticules_5.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_10m_graticules_5"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "white",
                        "stroke": "lightgray"
                    }
                },
                {
                    "data": {
                        "url": "geometry/states_simple.json",
                        "format": {
                            "type": "topojson",
                            "feature": "STE_2021_AUST_GDA2020"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "white",
                        "stroke": "lightgray"
                    }
                },
                {
                    "mark": "circle",
                    "encoding": {
                        "latitude": {
                            "field": "latitude",
                            "type": "quantitative"
                        },
                        "longitude": {
                            "field": "longitude",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "true_shape_area",
                            "type": "quantitative"
                        },
                        "color": {
                            "field": "state_name",
                            "type": "nominal"
                        },
                        "tooltip": [
                            {
                                "field": "state_name",
                                "type": "nominal",
                                "title": "State"
                            },
                            {
                                "field": "area_ha",
                                "type": "quantitative",
                                "format": ",.0f",
                                "title": "Burn Area (Hectre)"
                            },
                            {
                                "field": "ignition_date",
                                "type": "temporal",
                                "title": "Ignition Date"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}